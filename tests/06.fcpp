
#include <flow/fs>
#include <flow/io>
int main()  {
	flow::File* f = nullptr;

	flow::Defer fDEFER = defer delete f;;
	
	str Fname = flow::input("introduce archivo: ");
	
	str Fcont = flow::input("introduce nueva linea: ");

	f = new flow::File(Fname);

	f->append(Fcont.ends_with('\n') ? Fcont : Fcont + "\n");

	return 0;
}
